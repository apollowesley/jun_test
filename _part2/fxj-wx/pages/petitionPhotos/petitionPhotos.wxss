page {
    background-color: #FFFFFF;
}

.feedback {
    margin:38rpx 24px;
    background-color: #FFFFFF;
    border-radius: 12rpx;
    padding: 38rpx;
}

.selectTopic {
    width: 100%;
    box-sizing: border-box;
    border:2rpx solid #eeeeee;
    height:88rpx;
    margin-bottom: 30rpx;
    position: relative;
}

.selectTopic::after {
    width:50rpx;
    height:84rpx;
    line-height: 84rpx;
    text-align: center;
    content: "\e7cc";
    position: absolute;
    top:0;
    right:0;
    font-family: iconfont;
    color: #999999;
    font-size: 40rpx;
    z-index: 0;
}

.items {
    padding-bottom: 20rpx;
}

.items .title {
    line-height:60rpx;
}
.items input {
    width: 100%;
    height:76rpx;
    min-height:76rpx;
    line-height: 76rpx;
    color: #2a2a2a;
    font-size: 28rpx;
    background-color: #f6f6f6;
    padding:0 20rpx;
    box-sizing: border-box;
}

.weui-input {
    box-sizing: border-box;
    width:100%;
    height:84rpx;
    line-height: 84rpx;
    padding:0 60rpx 0 20rpx;
    white-space: nowrap;
    overflow: hidden;
    display: block;
    text-overflow: ellipsis;
    position: relative;
    z-index: 2;
}
textarea {
    width:100%;
    padding:20rpx;
    height: 350rpx;
    box-sizing: border-box;
    background-color: #f6f6f6;
    font-size: 28rpx;
}

.submitBtn {
    width:360rpx;
    height:88rpx;
    text-align: center;
    line-height:88rpx;
    color: #fff;
    margin:30rpx auto 0;
    background-color: #3c8cf0;
    border-radius:12rpx;
    font-size:32rpx;
}

.btnBar {
    text-align: center;
    margin-top: 20rpx;
}

.btnBar .btn {
    width: 292rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background-color: #df6330;
    display: inline-block;
    margin:0 20rpx;
    border-radius: 12rpx;
}

.btnBar .btn.blue {
    background-color: #7aa6d1;
}