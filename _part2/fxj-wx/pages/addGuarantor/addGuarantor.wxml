<view class='title'>担保人信息</view>
<view class="viewlist">
    <view class='items'>
        <view class='hd'>姓名</view>
        <view class='bd'>
            <input type='text' placeholder='请输入姓名'></input>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>性别</view>
        <view class='bd'>
            <radio-group class="radio-group">
                <label class="radio">
                    <radio value="男" color='#7aa6d1' /> 男
                </label>
                <label class="radio">
                    <radio value="女" color='#7aa6d1' /> 女
                </label>
            </radio-group>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>担保关系</view>
        <view class='bd relative'>
            <picker value="{{index}}" range="{{array}}" bindchange="bindRelationship">
                <input value='{{array[index]}}' placeholder='请选择担保关系' disabled='true' class='pr' />
            </picker>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>年龄</view>
        <view class='bd'>
            <input type='number' placeholder='请输入年龄'></input>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>工作单位</view>
        <view class='bd'>
            <input type='text' placeholder='请输入工作单位'></input>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>居住地址</view>
        <view class='bd'>
            <input type='text' placeholder='请输入居住地址'></input>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>年收入</view>
        <view class='bd'>
            <input type='number' placeholder='请输入元'></input>
        </view>
    </view>
    <view class='items'>
        <view class='hd'>手机号码</view>
        <view class='bd'>
            <input type='number' placeholder='请输入手机号码'></input>
        </view>
    </view>
</view>
