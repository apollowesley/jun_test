.item{
  padding: 30rpx;
  height: 80rpx;
  display: flex;
  background: #fff;
  border-top: 2rpx solid #ededed;
}
.item:last-child{
  margin-bottom: 0;
}
.item-l{
  margin-right: 30rpx;
  height: 50rpx;
}
.item-l image{
  height: 50rpx;
  width: 50rpx;
  margin-top: 15rpx;
}
.item-c{
  flex: 1;
  margin-right: 30rpx;
  line-height: 80rpx;
}
.item-tit{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.item-txt{
  font-size: 22rpx;
  color: #aaa;
}
.item-r{
  font-size: 22rpx;
  color: #006bdb;
  line-height: 80rpx;
}