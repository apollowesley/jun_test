<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chentongwei.dao.common.IUpdateLogDAO">

    <sql id="list_column">
        id,
        content,
        create_time AS createTime
    </sql>

    <select id="list" resultType="updateLogListVO">
        SELECT
            <include refid="list_column" />
        FROM
            dt_update_log
        ORDER BY id DESC
    </select>

    <insert id="save" parameterType="updateLogSaveIO">
        INSERT INTO
            dt_update_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != content and '' != content">
                content,
            </if>
        </trim>

        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="null != content and '' != content">
                #{content},
            </if>
        </trim>
    </insert>

</mapper>