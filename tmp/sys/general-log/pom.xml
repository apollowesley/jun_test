            </roles>
        </developer>
    </developers>


    <repositories>
        <repository>
            <id>nexus</id>
            <name>local private nexus</name>
            <url>http://maven.oschina.net/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>


        <repository>
            <id>koala-snapshots</id>
            <url>http://nexus.openkoala.org/nexus/content/groups/Koala-snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>koala-release</id>
            <url>http://nexus.openkoala.org/nexus/content/groups/Koala-release/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>


    <modules>
        <module>koala-businesslog</module>
        <module>koala-businesslog-test</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.version>3.1.3.RELEASE</spring.version>
        <aspectj.version>1.6.12</aspectj.version>
        <charset>UTF-8</charset>
        <tomcat.version>6.0.35</tomcat.version>


        <koala.version>2.1.0-SNAPSHOT</koala.version>
        <cargo.container>jetty8x</cargo.container>

        <cargo.container.url>
            http://archive.eclipse.org/jetty/8.1.5.v20120716/dist/jetty-distribution-8.1.5.v20120716.zip
        </cargo.container.url>
        <cargo.container.downloadDir>${env.HOME}</cargo.container.downloadDir>
        <cargo.host>localhost</cargo.host>
        <cargo.port>6699</cargo.port>
        <cargo.context></cargo.context>
        <browser>org.openqa.selenium.firefox.FirefoxDriver</browser>
    </properties>

    <dependencyManagement>
        <dependencies>

            <!-- Springframework -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-orm</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-expression</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework</groupId>
