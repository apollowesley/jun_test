<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- 国际化使用简体中文 -->
	<constant name="struts.locale" value="zh_CN" /> <!--  en_US -->
	<!-- UTF-8编码 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 开发模式 -->
	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default">
		<!-- 定义处理用户请求的action，该action的class属性不是实际处理类，而是spring容器中的bean实例ID， 如果是Struts2自己实例bean则class属性会写带上包名的类全名。 -->
		<action name="checkUser" class="userAction" method="checkUser">		
			<result type="chain" name="success">showUserMessageList</result>
			<!--  
			<result name="success">/WEB-INF/jsp/showMessage.jsp</result>
			-->
			<result name="error">/WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="showUserMessageList" class="goMessageUiAction" method="showUserMessageList">			
			<result name="success">/WEB-INF/jsp/showMessage.jsp</result>
			<result name="error">/WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="goPublishMessageUI" class="goPublishMessageUIAction" method="goPublishMessageUI">			
			<result name="success">/WEB-INF/jsp/publishMessage.jsp</result>
			<result name="error">/WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="publishMessage" class="publishMessageAction" method="publishMessage">			
			<result name="success">/WEB-INF/jsp/publishMessageSuccess.jsp</result>
			<result name="error">/WEB-INF/jsp/publishMessageFailed.jsp</result>
		</action>
		
	</package>
</struts>    
