<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射Mapper-->
<mapper namespace="pers.man.quickdevcore.system.persistence.menu.MenuMapper">

    <!--映射结果集-->
    <resultMap id="BaseResultMap" type="pers.man.quickdevcore.system.entity.menu.Menu">
        <result property="id" column="id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime" jdbcType="DATE"/>
        <result property="updateTime" column="update_time" javaType="java.time.LocalDateTime" jdbcType="DATE"/>
        <result property="title" column="title" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="name" column="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="jump" column="jump" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="spread" column="spread" javaType="java.lang.Boolean" jdbcType="BOOLEAN"/>
        <result property="parentMenuId" column="parent_menu_id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <collection property="childMenus" column="id" select="pers.man.quickdevcore.system.persistence.menu.MenuMapper.getByParentMenuId"/>
    </resultMap>

    <!-- 表名-->
    <sql id="Table">
        system_menu
    </sql>
    <!--基本语句-->
    <sql id="BaseInsert">
        INSERT INTO
        <include refid="Table"/>
    </sql>
    <sql id="BaseDelete">
        DELETE FROM
        <include refid="Table"/>
        WHERE 1 = 1
    </sql>
    <sql id="BaseUpdate">
        UPDATE
        <include refid="Table"/>
    </sql>
    <sql id="BaseSelect">
        SELECT * FROM
        <include refid="Table"/>
        WHERE 1 = 1
    </sql>

    <!--根据id查询一个实体-->
    <select id="getById" parameterType="java.lang.String" resultMap="BaseResultMap">
        <include refid="BaseSelect"/>
        AND id = #{id}
    </select>

    <!--查询所有实体-->
    <select id="listAll" resultMap="BaseResultMap">
        <include refid="BaseSelect"/>
    </select>

    <!--统计所有实体的数量-->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM
        <include refid="Table"/>
    </select>

    <!--根据父菜单id查询一个实体-->
    <select id="getByParentMenuId" parameterType="java.lang.String" resultMap="BaseResultMap">
        <include refid="BaseSelect"/>
        AND parent_menu_id = #{id}
    </select>

    <!--保存一个实体-->
    <insert id="save" parameterType="pers.man.quickdevcore.system.entity.menu.Menu">
        <include refid="BaseInsert"/>
        (
        <if test="id != null and id != ''">id</if>
        <if test="createTime != null">,create_time</if>
        <if test="updateTime != null">,update_time</if>
        <if test="title != null and title != ''">,title</if>
        <if test="name != null and name != ''">,name</if>
        <if test="icon != null and icon != ''">,icon</if>
        <if test="jump != null and jump != ''">,jump</if>
        <if test="spread != null">,spread</if>
        <if test="parentMenuId != null and parentMenuId != ''">,parent_menu_id</if>
        )VALUES(
        <if test="id != null and id != ''">#{id}</if>
        <if test="createTime != null">,#{createTime}</if>
        <if test="updateTime != null">,#{updateTime}</if>
        <if test="title != null and title != ''">,#{title}</if>
        <if test="name != null and name != ''">,#{name}</if>
        <if test="icon != null and icon != ''">,#{icon}</if>
        <if test="jump != null and jump != ''">,#{jump}</if>
        <if test="spread != null">,#{spread}</if>
        <if test="parentMenuId != null and parentMenuId != ''">,#{parentMenuId}</if>
        )
    </insert>

    <!--保存多个实体-->
    <insert id="bathSave" parameterType="java.util.List">
        <include refid="BaseInsert"/>
        (
        id
        ,create_time
        ,update_time
        ,title
        ,name
        ,icon
        ,jump
        ,spread
        ,parent_menu_id
        )VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.id}
            ,#{item.createTime}
            ,#{item.updateTime}
            ,#{item.title}
            ,#{item.name}
            ,#{item.icon}
            ,#{item.jump}
            ,#{item.spread}
            ,#{item.parentMenuId}
            )
        </foreach>
    </insert>

    <!--更新一个实体-->
    <update id="update" parameterType="pers.man.quickdevcore.system.entity.menu.Menu">
        <include refid="BaseUpdate"/>
        <set>
            <if test="id != null and id != ''">id = #{id}</if>
            <if test="createTime != null and createTime != ''">,create_time = #{createTime}</if>
            <if test="updateTime != null and updateTime != ''">,update_time = #{updateTime}</if>
            <if test="title != null and title != ''">,title = #{title}</if>
            <if test="name != null and name != ''">,name = #{name}</if>
            <if test="icon != null and icon != ''">,icon = #{icon}</if>
            <if test="jump != null and jump != ''">,jump = #{jump}</if>
            <if test="spread != null and spread != ''">,spread = #{spread}</if>
            <if test="parentMenuId != null and parentMenuId != ''">,parent_menu_id = #{parentMenuId}</if>
        </set>
        WHERE id = #{id}
    </update>

    <!--删除一个实体-->
    <delete id="removeById" parameterType="java.lang.String">
        <include refid="BaseDelete"/>
        AND id = #{id}
    </delete>

    <!--批量删除-->
    <delete id="bathRemoveByIds" parameterType="java.lang.String">
        <include refid="BaseDelete"/>
        and id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>