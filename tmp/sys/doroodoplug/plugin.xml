<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="doroodoplug.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="doroodoplug.commands.category"
            id="doroodoplug.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="doroodoplug.handlers.RunHandler"
            commandId="doroodoplug.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="doroodoplug.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="doroodoplug.menus.sampleMenu"
               label="DOROODO开发平台"
               mnemonic="M">
            <command
                  commandId="doroodoplug.commands.sampleCommand"
                  id="doroodoplug.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="doroodoplug.toolbars.sampleToolbar">
            <command
                  commandId="doroodoplug.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="doroodoplug.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
   </extension>


</plugin>
