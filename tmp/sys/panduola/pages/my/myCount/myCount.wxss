page {
    background-color: #f3f3f3;
}

.centerTop {
    padding:30rpx 40rpx;
    background-color: #7aa6d1;
    position: relative;
    overflow: hidden;
    color: #FFFFFF;
}
.centerTop .hd {
    width: 104rpx;
    height: 104rpx;
    border: 2rpx solid #FFFFFF;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    margin: auto;
    position: relative;
    padding: 6rpx;
    box-sizing: border-box;
}
.centerTop .hd image {
    width: 88rpx;
    height:88rpx;
    -webkit-border-radius: 50%;
    border-radius: 50%;
}
.lendingVolume {
    margin: 0 40rpx;
    padding: 20rpx 0 0;
    border-bottom: 2rpx solid #eeeeee;
}

.lendingVolume .title {
    height: 70rpx;
    line-height: 70rpx;
    position: relative;
    font-size: 36rpx;
    font-weight: bold;
}

.lendingVolume .text {
    text-align: center;
    font-size: 56rpx;
    padding:20rpx 0 40rpx;
    display: flex;
    align-items:center;
    justify-content: center;
    flex-wrap: wrap;
}
.lendingVolume .text image {
    width: 50rpx;
    height: 50rpx;
    margin-right:30rpx;
}
.report {
    overflow: hidden;
}
.report .tit{
  padding: 30rpx;
  background: #fff;
}
.count-box{
  height: 320rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.item{
  width: 46%;
  height: 150rpx;
  margin: 0 2% 10rpx;
  float: left;
  text-align: center;
  border-radius: 5rpx;
  background: #fff;
  font-size: 30rpx;
}
.count-tit{
  height: 90rpx;
  line-height: 110rpx;
}
.count-info{
  height: 60rpx;
  line-height: 40rpx;
}