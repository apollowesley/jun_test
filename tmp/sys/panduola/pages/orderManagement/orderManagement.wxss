.loanItem-list{
    padding: 20rpx;
    height: auto;
}
.loanItem-list .item{
    margin: 0 auto 30rpx;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}
.loanItem-list .item:last-child{
    margin-bottom: 0;
}
.item-tit{
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #ededed;
    display: flex;
}
.item-tit-l, .item-tit-r{
    
}
.item-tit-l{
    margin-left: 20rpx;
    font-size: 28rpx;
    flex: 1;
}
.item-tit-c{
    flex: 1;
    margin-left: 10rpx;
}
.item-tit-c text{
    padding: 2rpx 10rpx;
    color: #d1d1d1;
    border: 2rpx solid #d1d1d1;
    border-radius: 10rpx;
    font-size: 20rpx;
}
.item-tit-r{
    margin-right: 20rpx;
    text-align: right;
    font-size: 24rpx;
    color: #01aaff;
}
.item-wrap{
    padding: 20rpx;
}
.item-info{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    display: flex;
}
.item-info-l{
    flex: 1;
    color: #d1d1d1;
}
.item-time{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    /* margin-bottom: 10rpx; */
}
.item-txt{
    font-size: 24rpx;
}
.item-txt-tit{
    height: 40rpx;
    line-height: 40rpx;
    display: flex;
    color: #01aaff;
}
.item-txt-tit .icon{
    height: 30rpx;
    width: 30rpx;
    overflow: hidden;
    margin: 5rpx 10rpx 0 0;
}
.item-txt-tit .icon image{
    width: 100%;
    height: 100%;
}

.item-txt-box{
    padding: 30rpx;
}
.item-txt-box .list{
    height: 40rpx;
    line-height: 40rpx;
    color: #d1d1d1;
    display: flex;
    margin-bottom: 30rpx;
}
.item-txt-box .list:last-child{
    margin-bottom: 0;
    color: #01aaff;
}
.list-l, .list-c, .list-r{
    flex: 1;
}
.list-l{

}
.list-c{
    text-align: center;
}
.list-r{
    text-align: right
}