<view class="topBar">
    <view class='title'>录像</view>
    <view class='p'>教室/上课环境</view>
</view>
<view class='videupload'>
    <video id="myVideo" src="{{videoSrc}}" controls style="width:100%;height:100%;" objectFit="cover" wx:if="{{videoSrc}}"></video>
</view>
<view class="videotape">
    <view class="upload" bindtap='uploadVideo' wx:if="{{!videoSrc}}">上传</view>
    <view class="delete" bindtap='removeVideo' data-fileId="{{fileId}}">删除</view>
</view>