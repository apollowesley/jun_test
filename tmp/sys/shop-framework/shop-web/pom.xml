    <!-- 配置项目的properties文件及运行所需的tomcat插件 -->
    <build>
        <finalName>shop-web</finalName>
        <filters>
            <filter>${project.basedir}/src/main/resources/config/applicationInfoConfig.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>



    <profiles>
        <!-- 开发环境  -->
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dubbo.zookeeper.address>zookeeper://${dev.dubbo.zookeeper.host}:${dev.dubbo.zookeeper.port}</dubbo.zookeeper.address>
                <dubbo.zookeeper.protocol>${dubbo.protocol}</dubbo.zookeeper.protocol>
                <dubbo.protocol.name>${dubbo.zookeeper.protocol.name}</dubbo.protocol.name>
            </properties>
        </profile>

        <!-- 持续集成环境  -->
        <profile>
            <id>qatest</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dubbo.zookeeper.address>zookeeper://${dev.dubbo.zookeeper.host}:${dev.dubbo.zookeeper.port}</dubbo.zookeeper.address>
                <dubbo.zookeeper.protocol>${dubbo.protocol}</dubbo.zookeeper.protocol>
                <dubbo.protocol.name>${dubbo.zookeeper.protocol.name}</dubbo.protocol.name>
            </properties>
        </profile>

        <!-- 生产环境  -->
        <profile>
            <id>online</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <dubbo.zookeeper.address>zookeeper://${dev.dubbo.zookeeper.host}:${dev.dubbo.zookeeper.port}</dubbo.zookeeper.address>
                <dubbo.zookeeper.protocol>${dubbo.protocol}</dubbo.zookeeper.protocol>
                <dubbo.protocol.name>${dubbo.zookeeper.protocol.name}</dubbo.protocol.name>
            </properties>
        </profile>

    </profiles>



