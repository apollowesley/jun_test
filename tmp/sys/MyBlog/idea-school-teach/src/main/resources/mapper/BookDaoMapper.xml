<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sise.school.teach.bussiness.book.dao.BookDao" >
  <resultMap id="BaseResultMap" type="com.sise.school.teach.bussiness.book.po.BookPO" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="book_code" property="bookCode" jdbcType="VARCHAR" />
    <result column="book_url" property="bookUrl" jdbcType="VARCHAR" />
    <result column="book_img" property="bookImg" jdbcType="VARCHAR" />
    <result column="des" property="des" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="TINYINT" />
    <result column="book_type" property="bookType" jdbcType="TINYINT" />
    <result column="book_name" property="bookName" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, book_name, book_code,book_url,book_img, book_type, des, status, create_time, update_time
  </sql>
  <insert id="insert" parameterType="com.sise.school.teach.bussiness.book.po.BookPO" >
    insert into t_book (book_name, book_code,book_url,book_img, book_type, des, create_time, update_time)
    values ( #{bookName,jdbcType=VARCHAR}, #{bookCode,jdbcType=VARCHAR},
    #{bookUrl,jdbcType=VARCHAR},#{bookImg,jdbcType=CHAR},
      #{bookType,jdbcType=TINYINT}, #{des,jdbcType=CHAR},#{createTime,jdbcType=TIMESTAMP},
      #{updateTime,jdbcType=TIMESTAMP})
  </insert>

  <select id="selectAllByStatus" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"></include>
    FROM t_book
    WHERE
    <if test="status=='1'.toString()">
       status=1
    </if>
    <if test="status=='2'.toString()">
       status=2
    </if>
    <if test="status=='3'.toString()">
      status=3
    </if>
    <if test="status=='4'.toString()">
      status=4
    </if>
  </select>

  <select id="selectOneByBookName" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"></include>
    FROM t_book
    WHERE book_name=#{bookName}
  </select>

  <update id="updateByBookName"  parameterType="com.sise.school.teach.bussiness.book.po.BookPO"  >
    UPDATE t_book
    <set>
      <if test="bookUrl != null and bookUrl!=''">
        book_url=#{bookUrl,jdbcType=VARCHAR},
      </if>
      <if test="bookImg != null  and bookImg!=''">
        book_img=#{bookImg,jdbcType=VARCHAR},
      </if>
    </set>
    WHERE book_name=#{bookName,jdbcType=VARCHAR}
  </update>

</mapper>