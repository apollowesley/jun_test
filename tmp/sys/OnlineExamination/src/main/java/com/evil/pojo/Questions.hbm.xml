<?xml version="1.0" ?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.evil.pojo">
	<class name="Questions" table="tb_questions" catalog="onlineexamination">
		<id name="id" type="java.lang.String">
			<column name="ID" length="32" />
			<generator class="uuid.hex"></generator>
		</id>
		<property name="title" type="java.lang.String">
			<column name="title" length="500" />
		</property>
		<property name="questionsType" type="integer">
			<column name="questionsType" />
		</property>
		<property name="content" type="java.lang.String">
			<column name="content" length="500" />
		</property>
		<property name="answer" type="java.lang.String">
			<column name="answer" length="100" />
		</property>
		<property name="optionA" type="java.lang.String">
			<column name="optionA" />
		</property>
		<property name="optionB" type="java.lang.String">
			<column name="optionB" />
		</property>
		<property name="optionD" type="java.lang.String">
			<column name="optionD" />
		</property>
		<property name="optionC" type="java.lang.String">
			<column name="optionC" />
		</property>
		<property name="optionE" type="java.lang.String">
			<column name="optionE" />
		</property>
		<property name="optionF" type="java.lang.String">
			<column name="optionF" />
		</property>
		<property name="optionG" type="java.lang.String">
			<column name="optionG" />
		</property>
		<property name="optionH" type="java.lang.String">
			<column name="optionH" />
		</property>
		<property name="isDelete" type="java.lang.String">
			<column name="isDelete" length="1" />
		</property>

		<property name="insertTime" column="insertTime" type="timestamp"
			update="false" />

		<!-- 映射Questions到QuestionTemplate的多对一关联关系 -->
		<many-to-one name="questionTemplate" class="com.evil.pojo.assist.QuestionTemplate" lazy="false" fetch="join" >
			<column name="templateID" length="32" not-null="true" />
		</many-to-one>
	</class>
</hibernate-mapping>
