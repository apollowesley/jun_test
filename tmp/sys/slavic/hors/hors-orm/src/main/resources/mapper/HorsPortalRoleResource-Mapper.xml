<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.slavic.hors.orm.mapper.HorsPortalRoleResourceMapper">

    <resultMap type="com.slavic.hors.orm.entity.HorsPortalRoleResource" id="HorsPortalRoleResourceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="resourceId" column="resource_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="HorsPortalRoleResourceMap">
        select
          id, role_id, resource_id, create_time, update_time
        from api_starter.hors_portal_role_resource
        where id = #{id}
    </select>
    
    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="HorsPortalRoleResourceMap">
        select
          id, role_id, resource_id, create_time, update_time
        from api_starter.hors_portal_role_resource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="resourceId != null">
                and resource_id = #{resourceId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into api_starter.hors_portal_role_resource(role_id, resource_id, create_time, update_time)
        values (#{roleId}, #{resourceId}, #{createTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateById">
        update api_starter.hors_portal_role_resource
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="resourceId != null">
                resource_id = #{resourceId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from api_starter.hors_portal_role_resource where id = #{id}
    </delete>

    <delete id="deleteByRoleId">
        delete from api_starter.hors_portal_role_resource where role_id = #{roleId}
    </delete>

    <select id="listByRolesId" resultMap="HorsPortalRoleResourceMap">
        select
          id, role_id, resource_id, create_time, update_time
        from api_starter.hors_portal_role_resource
        where role_id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>