/* pages/index/login/login.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-bottom: 23rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  bottom: 30px;
  position: absolute;
  font-size: 14px;
  color: #8a8a8a;
}

.login-button{
  border-radius: 6px;
  background: #12C301;
  height: 40px;
  width: 120px;
  color: #fff;
  font-size: 15px;
  line-height: 40px;
  padding-left:40px; 
}

.login-png{
  width: 22px;
  height: 22px;
  position: absolute;
  margin-top: 8px;
  margin-left: -25px
}