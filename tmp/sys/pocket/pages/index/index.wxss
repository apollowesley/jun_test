/**index.wxss**/
page{
  background: #F7F7F7;
}

.top{
  border-bottom: 1px solid #BCBCBC;
  height: 60px;
  padding-top: 5px;
  background: #fff;
}
.top-nav{
  width: 25%;
  display: inline-block;
  height: 100%;
  text-align: center;
  color: #797979;
  letter-spacing:1px
}
.top-nav view{
  font-size: 14px;
  margin-top: 5px;
}

.top-nav-text{
  font-size: 13px;
  height: 20px;
  width: 25%;
}

.top-nav-view{
  height: 40px;
  color: #2C2C2C;
}

.top-nav-month{
   font-size: 20px;
}

.top-nav-year{
  position: absolute;
  margin-left: -25px;
  margin-top: -17px;  
}

.top-nav-view image{
  height: 12px;
  width: 12px;
  position: absolute;
  margin-top: 10px;
}

.hr{
  position: absolute;
  width: 1px;
  height: 30px;
  background: #B8BABD;
  margin-left: 24%;
  margin-top: -17%;
}

.day{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  letter-spacing:1px;
  color:#3D3D3D;
}

.day text{
  margin-left: 15px;
}

.day-right{
  float:right;
  margin-right:15px;
  letter-spacing:0px;
}

.detail{
  background: #fff;
  height: 50px;
  width: 100%;
}

.nav-hr{
  height: 1px;
  width: 88%;
  background: #DADADA;
  margin-left: 10%;
  margin-right: 2%;
  margin-top: 1px;
}

.prompt{
  font-size: 23px;
  color: #CCCCCC;
  text-align: center;
  margin-top: 50%;
}