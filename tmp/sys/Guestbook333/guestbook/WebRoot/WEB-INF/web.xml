<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>com.jake.admin.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddMessServlet</servlet-name>
		<servlet-class>com.jake.servlet.AddMessServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddMessServlet</servlet-name>
		<url-pattern>/servlet/addMess</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>EncodingFile</filter-name>
		<filter-class>com.jake.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>AdminManager</filter-name>
		<filter-class>com.jake.filter.AdminManagerFilter</filter-class>
		<init-param>
			<param-name>url</param-name>
			<param-value>/admin/login.jsp</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFile</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AdminManager</filter-name>
		<url-pattern>/admin/secure/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
