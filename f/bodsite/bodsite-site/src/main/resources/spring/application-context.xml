<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">


	<import resource="classpath:META-INF/spring/dubbo-consumer.xml" />

	<!-- <context:property-placeholder location="${system.envdir}/*.properties,classpath*:/system/bodsite-common.properties" 
		ignore-unresolvable="true" ignore-resource-not-found="true" /> -->
	<!-- 自定义扩展PropertyPlaceholderConfigurer 加载配置文件 -->
	<bean id="propertyConfigurer" class="com.bodsite.common.config.properties.SystemProperty">
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>classpath*:/system/*.properties</value>
			</list>
		</property>
	</bean>
	
	<!-- spring加载log4j配置 -->
	<bean id="log4jInitialization"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>classpath:system/log4j.xml</value>
			</list>
		</property>
	</bean>
	
	<bean id="cache" class="com.bodsite.common.cache.RedisCache">
		<property name="port" value="6379" />
		<property name="host" value="127.0.0.1" />
	</bean>
	
	<bean id="cache1" class="com.bodsite.common.cache.MemcachedCache">
		<property name="servers" value="127.0.0.1:11211" />
	</bean>
</beans>