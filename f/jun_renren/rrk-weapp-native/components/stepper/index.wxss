.zan-stepper{
  color:#666;
  display: flex;
  align-items: center;
}
.zan-stepper view{
  /* display:inline-block; */
  /* padding:10rpx 0; */
  text-align:center;
  box-sizing:border-box;
  /* vertical-align:middle; */
  font-size:24rpx;
  border:1px solid #999;
}
.zan-stepper .zan-stepper__minus{
  border-right:none;
  border-radius:4rpx 0 0 4rpx;
}
.zan-stepper .zan-stepper__text{
  border:1px solid #999;
  /* display:inline-block; */
  text-align:center;
  /* vertical-align:middle; */
  min-height:auto;
  font-size:24rpx;
  box-sizing: border-box;
}
.zan-stepper .zan-stepper__plus{
  border-left:none;
  border-radius:0 4rpx 4rpx 0;
}
.zan-stepper .zan-stepper--disabled{
  background:#f8f8f8;
  color:#bbb;
  border-color:#e8e8e8;
}
.zan-stepper--small view{
  min-width:60rpx;
  /* line-height:30rpx; */
  line-height:46rpx;
  height:50rpx;
}
.zan-stepper--small .zan-stepper__text{
  width:60rpx;
  line-height:46rpx;
  height:50rpx;
}
.zan-stepper--middle view{
  min-width:80rpx;
  line-height:40rpx;
}
.zan-stepper--middle .zan-stepper__text{
  width:80rpx;
  line-height:60rpx;
  height:60rpx;
}
.zan-stepper--large view{
  min-width:88rpx;
  line-height:44rpx;
}
.zan-stepper--large .zan-stepper__text{
  width:88rpx;
  line-height:64rpx;
  height:64rpx;
}