.order-item {
  background: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.order-head {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.order-head > view {
  color: #ff69ab;
}

.order-head .shop {
  display: flex;
  align-items: center;
}

.shop-pic {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background: #eee;
}

.order-body {
  padding-top: 20rpx;
  background: #f8f8f8;
  /* font-size: 24rpx; */
}

.order-goods {
  display: flex;
  padding: 0 20rpx 20rpx;
}

.order-goods-pic {
  flex: none;
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  background: #eee;
}

.order-goods-info {
  flex: auto;
  display: flex;
  padding-left: 20rpx;
}

.order-goods-name {
  flex: auto;
}

.order-goods-name .name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order-goods-name .desc {
  display: block;
  color: #888;
  margin-top: 8rpx;
  font-size: 24rpx;
}

.order-goods-price {
  flex: none;
  width: 140rpx;
  text-align: right;
  line-height: 1.5;
}
.order-goods-price .price, .order-goods-price .num {
  font-size: 24rpx !important;
  color: #888;
}

.order-goods-price .price {
  text-decoration: line-through;
}

.order-goods-price .num {
  padding-top: 8rpx;
}

.order-foot-info {
  height: 68rpx;
  line-height: 68rpx;
  text-align: right;
  padding: 0 20rpx;
}

.order-foot-opera {
  height: 88rpx;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 20rpx;
}

.order-foot-opera button {
  margin: 0 0 0 16rpx;
  font-size: 24rpx;
}

.order-button {
  font-size: 24rpx;
  background: #fd69ab !important;
}

