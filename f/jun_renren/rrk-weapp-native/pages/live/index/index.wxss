.show {
	display: block;
}

.hidden {
	display: none;
}

.label-ui {
	position: absolute;
	top: 0;
	left: 0;
	width: 100vw;
	height: 100vh;
	color: #999999;
}

.label-ui .room {
	position: fixed;
	top: 0;
	left: 0;
	padding: 0;
	display: block;
	margin: 2vw;
	width: 96vw;
}

.label-ui .room .info,
.label-ui .room .capital {
	display: flex;
	align-items: center;
	justify-content: space-between;
	color: #ffffff;
}

.label-ui .room .info .anchor {
	background-color: rgba(0, 0, 0, 0.3);
	border-radius: 5vw;
	display: flex;
	height: 10vw;
	width: 42vw;
}

.label-ui .room .info .anchor .img {
	background-color: rgba(0, 0, 0, 0.3);
	background-position: 50%;
	background-repeat: no-repeat;
	background-size: cover;
	border-radius: 5vw;
	height: 10vw;
	width: 10vw;
}

.label-ui .room .info .anchor .txt {
	flex: 1;
	font-size: 24rpx;
	margin-left: 1vw;
	line-height: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	overflow: hidden;
}

.label-ui .room .info .anchor .txt .name {
	font-size: 28rpx;
	width: 15vw;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	vertical-align: middle;
}

.label-ui .room .info .anchor .txt .hot {
	display: flex;
	align-items: center;
	justify-content: flex-start;
}

.label-ui .room .info .anchor .txt .hot .people {
	width: 24rpx;
	height: 24rpx;
	display: block;
	padding-right: 10rpx;
}

.label-ui .room .info .anchor .follow {
	height: 7vw;
	border-radius: 3.5vw;
	margin-top: 1.5vw;
	margin-right: 1.5vw;
	font-size: 12px;
	line-height: 7vw;
	min-width: 12vw;
	display: block;
	border: none;
	color: white;
	background-color: #ec19f4;
	text-align: center;
}

.label-ui .room .info .visitor {
	display: flex;
	justify-content: space-around;
}

.label-ui .room .info .status {
	margin-right: 2vw;
}

.label-ui .room .info .visitor .guest {
	width: 10vw;
	height: 10vw;
	background-color: rgba(0, 0, 0, 0.3);
	border-radius: 5vw;
	display: block;
	text-align: center;
	line-height: 10vw;
}

.label-ui .room .capital {
	font-size: 24rpx;
	margin-top: 2vw;
}

.label-ui .room .capital .bean,
.label-ui .room .capital .anchor-id {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	border-radius: 6vw;
}

.label-ui .room .capital .bean {
	background-color: #ea7590;
}

.label-ui .room .capital .anchor-id {
	background-color: rgba(0, 0, 0, 0.3);
	box-sizing: border-box;
}

.label-ui .room .capital .icon {
	display: block;
	width: 6vw;
	height: 6vw;
}

.label-ui .room .capital .text {
	margin: 0 1vw;
}

.label-ui .room .detail {
	margin-top: 2vw;
	width: 140rpx;
	height: 140rpx;
	padding: 10rpx;
	background-color: rgba(0, 0, 0, 0.1);
	border-radius: 10rpx;
	position: relative;
}

.label-ui .room .detail .img {
	width: 140rpx;
	height: 140rpx;
	border-radius: 10rpx;
}

.label-ui .room .detail .price {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 150rpx;
	height: 44rpx;
	text-align: center;
	color: #ffffff;
	font-size: 24rpx;
	background-color: rgba(0, 0, 0, 0.1);
}

.label-ui .buttons {
	position: fixed;
	bottom: 90rpx;
	right: 0;
	padding: 0;
	display: block;
	width: 116rpx;
	transition: 0.4s all;
	transform: translate3d(0, 0, 0);
}

.label-ui .buttons.active {
	transform: translate3d(100%, 0, 0);
}

.label-ui .buttons .icon {
	margin: 18rpx;
	width: 80rpx;
	height: 80rpx;
}

.label-ui .buttons button {
	border: 0;
	background-color: transparent;
	transform: translate3d(0, 0, 0);
}

.label-ui .buttons button::after {
	border: 0;
}

.label-ui .nav {
	position: fixed;
	bottom: 0;
	left: 0;
	height: 120rpx;
	padding: 0;
	font-size: 32rpx;
	display: flex;
	align-items: flex-end;
	justify-content: space-around;
	width: 100vw;
	transition: 0.4s all;
	transform: translate3d(0, 0, 0);
}

.label-ui .nav.active {
	transform: translate3d(0, 100%, 0);
}

.label-ui .nav .url,
.label-ui .nav .btn {
	color: #ffffff;
	padding-top: 30rpx;
	padding-bottom: 30rpx;
	width: 20vw;
	text-align: center;
}

.label-ui .nav .btn {
	color: #ff6db8;
}

.label-ui .nav .ico {
	margin: 0;
	padding: 0;
	border: 0;
}

.label-ui .nav .ico .img {
	width: 120rpx;
	height: 120rpx;
	transform: translate3d(0, 0, 0);
}

.label-ui .message {
	position: fixed;
	bottom: 140rpx;
	left: 0;
	padding: 0;
	display: block;
	width: 500rpx;
	transition: 0.4s all;
	transform: translate3d(0, 0, 0);
	padding-left: 30rpx;
	color: #FFFFFF;
}

.label-ui .message.active {
	transform: translate3d(100%, 0, 0);
}

.label-ui .message .msg-list {
	max-height: 20vh;
	overflow-y: scroll;
	min-height: 45rpx;
	min-width: 126rpx;
}

.label-ui .message .msg-info {
	clear: both;
	margin: 5rpx 0;
}

.label-ui .message .msg-background {
	position: relative;
	float: left;
	padding: 5rpx;
	background-color: rgba(0, 0, 0, 0.2);
	border-radius: 20rpx;
}

.label-ui .message .msg-background cover-view {
	font-size: 26rpx;
	line-height: 45rpx;
	margin-right: 10rpx;
	display: inline;
	/* white-space: normal; */
}

.label-ui .message .msg-info cover-image {
	width: 126rpx;
	height: 45rpx;
	margin-right: 10rpx;
	display: inline-block;
	vertical-align: top;
}

.label-ui .message .msg-info .msg-level {
	position: absolute;
	left: 60rpx;
	top: 5rpx;
	z-index: 9;
	height: 45rpx;
	font-size: 24rpx;
}

.label-ui .message .msg-info .msg-detail {
	white-space: normal;
}

.goods-close{
  position:absolute;
  top:-0;
  right:46rpx;
  z-index: 9999;
  padding:0;
  width:50rpx;
  height: 50rpx;
  visibility: visible !important;
}

.goods {
	position: fixed;
	bottom: 140rpx;
	left: 0;
	padding: 0;
	width: 100vw;
	color: #ffffff;
	display: flex;
	justify-content: space-between;
	align-items: center;
  white-space: pre-wrap;
  overflow: auto !important;
  visibility: visible !important;
}

.goods .content {
	background-color: rgba(0, 0, 0, 0.85);
	border-radius: 1em;
	display: flex;
	flex-direction: column;
	font-size: 28rpx;
	height: auto;
	margin: 0 auto;
	padding: 4vw;
	width: 70vw;
}

.goods .content .info {
	display: flex;
	padding-bottom: 4vw;
}

.goods .content .info .img {
	border-radius: 2vw;
	height: 20vw;
	width: 20vw;
}

.goods .content .info .text {
	display: flex;
	flex: 1;
	flex-direction: column;
	font-size: 28rpx;
	padding-left: 4vw;
}

.goods .content .info .text .name {
	display: flex;
	white-space: pre-wrap;
	text-align: justify;
	max-height: 13vw;
}

.goods .content .info .text .price {
	margin-top: 2vw;
	display: flex;
	align-items: center;
	color: #fc3c6d;
}

.goods .content .info .text .price .money {
	margin-left: 4rpx;
	font-size: 5vw;
	white-space: pre-wrap;
}

.goods .content .choose {
	display: flex;
	padding: 1vw 0;
	flex: 1;
	flex-direction: column;
}

.goods .content .choose .item {
	font-size: 24rpx;
}

.goods .content .choose .item .name {
	line-height: 8vw;
}

.goods .content .choose .item .contents {
	display: flex;
	flex-wrap: wrap;
	font-size: 28rpx;
}

.goods .content .choose .specs .contents {
	max-height: 26vw;
	overflow-y: scroll;
}

.goods .content .choose .specs .contents .spec {
	padding: 0;
	margin: 0;
	font-size: 28rpx;
	border-radius: 1vw;
	margin: 1vw;
	padding: 0 2vw;
	line-height: 2;
	border: none;
}

.goods .content .choose .specs .contents .selected {
	background-color: #fc3c6d;
	color: #ffffff;
}

.goods .content .choose .specs .contents button::after {
	border: none;
}

.goods .content .choose .btns .contents {
	justify-content: flex-start;
	width: 100%;
	height: 9vw;
	margin-bottom: 2vw;
}

.goods .content .choose .btns .contents .minus,
.goods .content .choose .btns .contents .number,
.goods .content .choose .btns .contents .plus {
	font-size: 28rpx;
	text-align: center;
	margin: 1vw 0;
	min-width: 2.2em;
	color: #ffffff;
	height: 7vw;
	line-height: 7vw;
	background-color: transparent;
	border: 2rpx solid #555;
}

.goods .content .buttons {
	display: flex;
	justify-content: space-around;
	padding-top: 4vw;
}

.goods .content .buttons .btn {
	border: none;
	border-radius: 1vw;
	font-size: 28rpx;
	min-width: calc(5em + 6vw);
	padding: 3vw;
	line-height: 5vw;
	width: 100%;
}

.goods .content .buttons .cart {
	margin-right: 10rpx;
	color: #fc3c6d;
}

.goods .content .buttons .buy {
	background-color: #fc3c6d;
	color: #fff;
}

.goods .content .line {
	width: 100%;
	height: 3rpx;
	background-color: #555;
}

.goods .icon {
	margin: 0 1vw;
	width: 13vw;
	transform: rotate(270deg);
}

.chat {
	position: fixed;
	bottom: 0;
	left: 0;
	padding: 0;
	margin: 0;
	width: 100vw;
	background-color: #DDDEE1;
	height: 100rpx;
	overflow: hidden;
}

.chat .chat-btns,
.chat input,
.chat button {
	display: inline-block;
}

.chat input {
	height: 80rpx;
	width: 445rpx;
	min-height: 80rpx;
	margin: 10rpx 20rpx;
	line-height: 80rpx;
	background: #ffffff;
	border-radius: 10rpx;
	padding: 0 10rpx;
}

.chat .chat-btns {
	padding: 0;
	margin: 0;
}

.chat button {
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	padding: 0 28rpx;
	margin: 10rpx 5rpx;
}
