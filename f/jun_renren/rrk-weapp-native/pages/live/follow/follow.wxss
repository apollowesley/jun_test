.follow {
  color: #fff;
  background: #080608;
  padding: 10rpx 10rpx 0;
  width: 100%;
  min-height: 100vh;
  overflow: hidden;
}

.live-contain {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
}

.video-wrap{
  width: calc((100% - 10rpx) / 2);
  margin: 0 10rpx 20rpx 0;
}
.video-wrap:nth-child(2n){
  margin-right: 0;
}

.loading{
  color: #fff !important;
}


