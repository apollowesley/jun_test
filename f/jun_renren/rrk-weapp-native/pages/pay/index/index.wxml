          <view class="input-icon">
            <text></text>微信支付
          </view>
          <radio checked color="#fd69ab"></radio>
        </label>
      </view>
    </view>
    <view class="btn">
      <i-button type="rrk" bindtap="wxPay" size="small">立即支付</i-button>
    </view>
  </view>
</view>


