  <view class="pay">
    <view class="pay-head">
      <view class="pay-head-wrap">
        <view class="pay-icon">
          <text></text>支付金额</view>
        <view class="pay-price">￥{{filter.toFlo2(totalMoney)}}</view>
      </view>
    </view>
    <view class="pay-contain">
      <view class="pay-title">选择支付方式</view>
