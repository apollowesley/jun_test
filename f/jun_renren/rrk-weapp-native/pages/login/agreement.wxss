.container {
	display: block;
	height: 100vh;
	width: 100vw;
	line-height: 24px;
	text-align: justify;
}

.agreement {
	padding: 10px;
	height: calc(100vh - 62px);
	overflow: scroll;
}

.button {
	position: fixed;
	bottom: 0;
	left: 0;
	width: calc(100vw - 30px);
	height: 42px;
	margin: 10px 15px;
	background-color: #ffaae8;
	border-radius: 100px;
	overflow: hidden;
	transform: translate3d(0, 0, 0);
	box-shadow: 0 2px 12px 0px rgba(255, 92, 211, 0.6);
}

button {
	width: 100%;
	line-height: 42px;
	color: #fff;
	font-size: 14px;
	text-align: center;
}

.un {
	background-image: linear-gradient(to right, #ff5ad3, #ff96e3);
	border-top-right-radius: 100px;
	border-bottom-right-radius: 100px;
}

rich-text {
	font-size: 28rpx;
	text-align: justify;
}