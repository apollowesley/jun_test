.container {
  height: 100vh;
}

image {
  display: block;
  width: 100vw;
  height: 410rpx;
}

.form {
  padding: 0 30rpx;
}

.form .input {
  display: flex;
  align-items: center;
  height: 76rpx;
  margin: 30rpx;
  background-color: #f7f7f7;
  border-radius: 40rpx;
}

.form .input:last-child {
  margin-bottom: 0;
}

.form .input label {
  width: 60rpx;
  height: 40rpx;
  margin-left: 30rpx;
  margin-right: 0rpx;
  background: url(https://gw.lgh81.com/Share/weapp/common/form_sprites.png) no-repeat;
  background-size: 40rpx;
}

.form .input .code {
  background-position-y: -40rpx;
}

.form .input .codeBtn {
  width: 182rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  line-height: 50rpx;
  border-left: 2rpx solid #eee;
  padding-left: 20rpx;
}

.form .input input {
  color: #333;
  background-color: transparent;
  border: none;
}

.form .input input:focus {
  outline: none;
}

.form .notice {
  color: #999;
  margin: 30rpx 60rpx;
  font-size: 24rpx;
}

.form .notice text {
  /* display: inline-block; */
  color: #ff5ed4;
  font-size: inherit;
}

.form .button {
  height: 84rpx;
  margin: 30rpx;
  background-color: #ffaae8;
  border-radius: 200rpx;
  overflow: hidden;
  transform: translate3d(0, 0, 0);
  box-shadow: 0 4rpx 24rpx 0 rgba(255, 92, 211, 0.6);
}

.form .button button {
  width: 100%;
  line-height: 84rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.form .button .un {
  background-image: linear-gradient(to right, #ff5ad3, #ff96e3);
  border-top-right-radius: 200rpx;
  border-bottom-right-radius: 200rpx;
}
