.address {
  background: #f7f7f7;
  padding: 20rpx 20rpx 100rpx;
  min-height: 100vh;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-top: 1px solid #eee;
  background: #fff;
  width: 100%;
  padding: 10rpx;
}

.add-wrap {
  line-height: 1;
  padding: 26rpx 26rpx 16rpx;
  background: #fff;
  border: 1px solid #fff;
  border-radius: 10rpx;
  margin-bottom: 26rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.add-wrap.active {
  border-color: #fd69ab;
}

.add-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add-head view {
  font-size: 32rpx;
}

.add-body {
  color: #888;
  line-height: 1.5;
  margin: 26rpx 0;
}

.add-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1px solid #f7f7f7;
  color: #888;
  line-height: 1;
}

.default {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.default image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.opera{
  display: flex;
  align-items: center;
}

.opera > view {
  display: flex;
  align-items: center;
  margin-left: 26rpx;
}

.opera > view image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
