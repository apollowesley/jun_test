.home {
  min-height: 100vh;
  background: #080608;
}

.home-head{
  height: 480rpx;
  background: center / cover no-repeat #fafafa;
  position: relative;
  overflow: hidden;
}
.user-info{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  color: #fff;
  padding: 40rpx 0 0 30rpx;
}
.user-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 60rpx;
}
.user-pic {
  flex: none;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 8rpx rgba(255, 255, 255, 0.2);
  background:#666;
}
.user-btn{
  padding: 0 14rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 48rpx;
  border-radius: 10rpx;
  border: 1px solid #fff;
}
.user-name {
  font-size: 44rpx;
  margin-top: 30rpx;
  width: calc(100vw - 120rpx);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.user-signature {
  font-size: 24rpx;
  margin-top: 20rpx;
}
.user-id {
  font-size: 24rpx;
}
.user-desc{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.user-desc > view{
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  line-height: 1;
  border-radius: 40rpx;
  padding: 10rpx 18rpx;
  font-size: 24rpx;
}
#sex {background: #3fa0bd;}
#sex view{
  margin-right: 4rpx;
  width: 28rpx;
  height: 24rpx;
  background: center / contain no-repeat;
  }
#nan {background-image: url(https://gw.lgh81.com/Share/weapp/user/nan.png) !important;}
#nv {background-image: url(https://gw.lgh81.com/Share/weapp/user/nv.png) !important;}
#age {background: #c1792e;}
#online{background: #6666ff;}
.user-status {
  display: flex;
  font-size: 32rpx;
  margin-top: 50rpx;
}
.user-status text{
  margin-right: 60rpx;
}
.cover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.85);
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  background: #080608;
}

.userdesc {
  display: flex;
  margin-top: 60rpx;
}

.userdesc view {
  width: 20%;
  text-align: center;
}

.userdesc text {
  display: block;
}

.userdesc text:first-child {
  font-size: 32rpx;
}

.order {
  /* margin-top: 20rpx; */
  background: #080608;
  display: none;
}

.order navigator {
  width: calc(100% / 3);
  padding: 15rpx 0 30rpx 0;
}

.order image {
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin: 0 auto;
}

.order text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 热门列表 */

.video .title {
  line-height: 80rpx;
  color: #fd69ab;
  font-size: 36rpx;
  padding-left: 30rpx;
  color: #fff;
  letter-spacing: 6rpx;
}

.video-contain {
  padding: 0 10rpx;
  overflow: hidden;
  background: #080608;
}

.video-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding-top: 10rpx;
}

.video-wrap {
  width: calc((100% - 10rpx) / 2);
  margin: 0 10rpx 20rpx 0;
}

.video-wrap:nth-child(2n) {
  margin-right: 0;
}

.dark {
  color: #333 !important;
}

.loading {
  color: #fff !important;
}
